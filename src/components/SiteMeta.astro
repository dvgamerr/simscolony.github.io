---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";

const { 
  title,
  description,
  url,
  image,
} = Astro.props

let subtitle = 'Simscolony Projects'
---

<!-- open graph -->
<meta property="og:title" content={`${title ? `${title} - ` : ''}${subtitle}`}>
<meta property="og:description" content={description}>
<meta property="og:type" content="website">
<meta property="og:url" content={url}>
<meta property="og:image" content={Astro.site ? `${Astro.site}${image}` : image}>
<GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Bai+Jamjuree:wght@400;600;700&family=IBM+Plex+Sans+Thai&family=Kanit&display=swap" />

<!-- page title -->
<title>{`${title ? `${title} - ` : ''}${subtitle}`}</title>
